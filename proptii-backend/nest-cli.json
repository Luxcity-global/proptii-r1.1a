{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": ["**/*.proto"],
    "webpack": false,
    "tsConfigPath": "tsconfig.json"
  },
  "watchOptions": {
    "usePolling": false,
    "interval": 1000,
    "ignored": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.git/**"
    ]
  }
} 